<div class="popup-window-bg">
  <div id="filter-window" class="popup-window">
    
    <div class="popup-window-header">Set Filters</div>
    <div class="popup-window-body">
      <div class="tabbable">
        <ul id="filer-tabs" class="nav nav-tabs popup-window-nav">
          <li class="active"><a href="#multiview-filter-general" data-toggle="tab">General</a></li>
          <li><a href="#multiview-filter-condition" data-toggle="tab">Condition</a></li>
          <li><a href="#multiview-filter-formula" data-toggle="tab">Formula</a></li>
        </ul>
        <div class="tab-content tab-content-border tab-content-padding">
          <div class="tab-pane active" id="multiview-filter-general">
              <div class="field-block">
                <label class="radio">
                    <input type="radio" name="filterGeneralLogicRadios" value=""> Include
                </label>
                <label class="radio">
                    <input type="radio" name="filterGeneralLogicRadios" value=""> Exclude
                </label>
              </div>
                
              <div class="field-block">
                <button class="btn-popup" id="multiview-filter-btn-all">All</button>
                <button class="btn-popup" id="multiview-filter-btn-none">None</button>
              </div>

              <div class="field-block" style="margin-left:20px;">
                <label class="checkbox">
                  <input type="checkbox" value="">
                  Kitchenware
                </label>
                <label class="checkbox">
                  <input type="checkbox" value="">
                  Office Supplies
                </label>
                <label class="checkbox">
                  <input type="checkbox" value="">
                  Computer Peripherals
                </label>
                <label class="checkbox">
                  <input type="checkbox" value="">
                  Furniture
                </label>
                <label class="checkbox">
                  <input type="checkbox" value="">
                  Home Appliance
                </label>
                <label class="checkbox">
                  <input type="checkbox" value="">
                  Auto Parts
                </label>
              </div>

          </div>
          <div class="tab-pane" id="multiview-filter-condition">

              <div class="field-block">
                <label class="radio">
                    <input type="radio" name="filterConditionLogicRadios" value=""> Include
                </label>
                <label class="radio">
                    <input type="radio" name="filterConditionLogicRadios" value=""> Exclude
                </label>
              </div>
              
              <div class="field-block" style="margin-left:20px;">
                <input class="input-filter float-right" id="focusedInput" type="text" placeholder="Input conditions...">
                <label class="radio">
                  <input type="radio" name="filterConditionOptionsRadios" value="">
                  Contains
                </label>
                <label class="radio">
                  <input type="radio" name="filterConditionOptionsRadios" value="">
                  Starts with
                </label>
                <label class="radio">
                  <input type="radio" name="filterConditionOptionsRadios" value="">
                  Ends with
                </label>
                <label class="radio">
                  <input type="radio" name="filterConditionOptionsRadios" value="">
                  Exactly matches
                </label>
              </div>

          </div>
          <div class="tab-pane" id="multiview-filter-formula">
            <div class="">
              <label class="radio">
                <input type="radio" name="filterFormulaOptionsRadios" value="">
                By Field
              </label>  
            </div>
            <div class="field-block" style="margin-left:20px">
              <div>
                  <div class="float-right">By</div>
                  <select class="select">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                  </select>
                  <select class="select">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                  </select>
              </div>
              <div>
                  <select class="select">
                    <option>Dimention</option>
                    <option>2</option>
                    <option>3</option>
                  </select>
                  <select class="select">
                    <option>Sum</option>
                    <option>2</option>
                    <option>3</option>
                  </select>
              </div>
            </div>
            <div class="">
              <label class="radio">
                <input type="radio" name="filterFormulaOptionsRadios" value="">
                By Formula
              </label>  
            </div>
            <div class="field-block" style="margin-left:20px">
              <div>
                  <select class="select">
                    <option>Dimention</option>
                    <option>2</option>
                    <option>3</option>
                  </select>
                  <select class="select">
                    <option>Sum</option>
                    <option>2</option>
                    <option>3</option>
                  </select>
              </div>
              <div>
                  <select class="select">
                    <option>></option>
                    <option>=</option>
                    <option><</option>
                    <option><=</option>
                    <option>>=</option>
                  </select>
                  <input style="width:76px; height:10px; margin:0; background-color:#9da2a4;" type="text">
              </div>
            </div>
            <div class="border-box" style="margin-left:20px">
              <label>Minimum <input class="input-filter" type="text">
              </label> 
              <label>Maximum <input class="input-filter" type="text">
              </label> 
            </div>          
          </div>
        </div>
    </div>
  </div>
  <div class="popup-window-footer">
    <button class="btn-popup"><a>Reset</a></button>
    <button type="submit" class="btn-popup pull-right">{{#linkTo "multiview"}}Confirm{{/linkTo}}</button>
    <button class="btn-popup pull-right">{{#linkTo "multiview"}}Cancel{{/linkTo}}</button>
  </div>
  </div>
</div>